{
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": ["**/node_modules/**/*"]
    },
    "rules": {
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ]
    }
}
